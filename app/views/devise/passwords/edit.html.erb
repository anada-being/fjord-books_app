<h2><%= t('views.devise.Change your password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field">
    <%= f.label :password, t('views.devise.New password') %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %><%= t('views.devise.characters minimum') %>)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation,  t('views.devise.Confirm new password') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.devise.Change my password') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
